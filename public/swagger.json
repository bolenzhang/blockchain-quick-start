{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Customer Workshop"
  },
  "tags": [
    {
      "name": "Invoke",
      "description": "Invoke on blockchain network"
    },
    {
      "name": "Query",
      "description": "Query on blockchain network"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/invoke/init": {
      "post": {
        "tags": [
          "Invoke"
        ],
        "summary": "init an account",
        "description": "",
        "operationId": "invokeInit",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "init an account with balance '0'",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Init"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/InitResponseS"
            }
          },
          "400": {
            "description": "Failed",
            "schema": {
              "$ref": "#/definitions/InitResponseF"
            }
          }
        }
      }
    },
    "/invoke/addPoints": {
      "post": {
        "tags": [
          "Invoke"
        ],
        "summary": "add points",
        "description": "",
        "operationId": "addPoints",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "add points to an account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddPoints"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/AddPointsResponseS"
            }
          },
          "500": {
            "description": "Failed",
            "schema": {
              "$ref": "#/definitions/AddPointsResponseF"
            }
          }
        }
      }
    },
    "/query/balance": {
      "post": {
        "tags": [
          "Query"
        ],
        "summary": "query balance",
        "description": "",
        "operationId": "queryBalance",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "query the balance of an account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/QueryBalance"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/QueryBalanceResponseS"
            }
          },
          "500": {
            "description": "Failed",
            "schema": {
              "$ref": "#/definitions/QueryBalanceResponseF"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Init": {
      "type": "object",
      "required": [
        "account"
      ],
      "properties": {
        "account": {
          "type": "string",
          "example": "testAccount"
        }
      }
    },
    "InitResponseS": {
      "type": "object",
      "properties": {
        "tx_id": {
          "type": "string",
          "example": "0c4590348b9f4378468d18f9de53118a396083a02ca68add267a1c816a23acb6"
        }
      }
    },
    "InitResponseF": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Request Error, parameter \"account\" doesn''t exist"
        }
      }
    },
    "AddPoints": {
      "type": "object",
      "required": [
        "account",
        "points"
      ],
      "properties": {
        "account": {
          "type": "string",
          "example": "testAccount"
        },
        "points": {
          "type": "string",
          "example": "5"
        }
      }
    },
    "AddPointsResponseS": {
      "type": "object",
      "properties": {
        "tx_id": {
          "type": "string",
          "example": "0c4590348b9f4378468d18f9de53118a396083a02ca68add267a1c816a23acb6"
        }
      }
    },
    "AddPointsResponseF": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Failed to invoke chaincode. cause:invoke chaincode proposal was bad"
        }
      }
    },
    "QueryBalance": {
      "type": "object",
      "required": [
        "account"
      ],
      "properties": {
        "account": {
          "type": "string",
          "example": "testAccount"
        }
      }
    },
    "QueryBalanceResponseS": {
      "type": "object",
      "properties": {
        "result": {
          "type": "number",
          "example": 5
        }
      }
    },
    "QueryBalanceResponseF": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Error: Incorrect number of arguments. Expecting account of the person to query"
        }
      }
    }
  }
}

